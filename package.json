{
  "name": "workflow-js",
  "version": "1.0.0",
  "description": "Workflow-JS",
  "main": "dist/index.js",
  "author": "Vahid V. <vhid.vz@gmail.com>",
  "license": "MIT",
  "types": "dist/index.d.ts",
  "scripts": {
    "debug": "jest --watch",
    "prebuild": "rimraf lib",
    "doc": "typedoc --out docs src/",
    "build": "tsc -p ./tsconfig.json",
    "clean": "rm -rf ./lib && rm -rf ./coverage",
    "lint": "eslint . '*/**/*.{js,ts}' --quiet --fix",
    "format": "prettier --write \"(src|test)/**/*.(ts|js)\"",
    "start:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register src/index.ts",
    "test": "jest && make-coverage-badge --report-path docs/coverage/coverage-summary.json --output-path coverage-badge.svg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vhidvz/workflow-js.git"
  },
  "bugs": {
    "url": "https://github.com/vhidvz/workflow-js/issues"
  },
  "keywords": [
    "bpmn",
    "engine",
    "workflow"
  ],
  "homepage": "https://github.com/vhidvz/workflow-js#readme",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "dotenv": "^16.0.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.1",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typedoc": "^0.23.13",
    "typescript": "^4.8.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "/dist"
  ],
  "dependencies": {
    "fast-xml-parser": "^4.0.9",
    "moddle-xml": "^10.0.0"
  }
}
